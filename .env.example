# ==========================================
# ML NO SUPERVISADO - Configuración para Railway
# ==========================================

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS (Compartida)
# Railway proporciona DATABASE_URL automáticamente
# ==========================================
DATABASE_URL=postgresql://user:password@postgres-service-name:5432/educativa_db
DATABASE_HOST=postgres-service-name
DATABASE_PORT=5432
DATABASE_NAME=educativa_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_postgres_password

# ==========================================
# CONFIGURACIÓN DE REDIS/CACHÉ (Compartida)
# Railway proporciona REDIS_URL automáticamente
# ==========================================
REDIS_URL=redis://redis-service-name:6379
REDIS_HOST=redis-service-name
REDIS_PORT=6379
REDIS_DB=0

# ==========================================
# CONFIGURACIÓN DE API
# ==========================================
API_HOST=0.0.0.0
API_PORT=8002
API_RELOAD=false
API_WORKERS=4

# ==========================================
# CONFIGURACIÓN GENERAL
# ==========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
PROJECT_NAME=ML No Supervisado - Plataforma Educativa
PROJECT_VERSION=2.0.0
SERVICE_TYPE=unsupervised

# ==========================================
# CONFIGURACIÓN DE MODELOS
# ==========================================
USE_GPU=false
GPU_DEVICE=0
TF_RANDOM_SEED=42
MODELS_DIR=/app/trained_models

# ==========================================
# PARÁMETROS DE CLUSTERING (NO CAMBIAR EN PRODUCCIÓN)
# ==========================================
DEFAULT_N_CLUSTERS=4
MIN_CLUSTER_SIZE=2
MAX_CLUSTER_SIZE=10
ANOMALY_CONTAMINATION=0.1
ANOMALY_THRESHOLD=0.5

# ==========================================
# SEGURIDAD
# ==========================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# AUTENTICACIÓN LARAVEL SANCTUM
# ==========================================
LARAVEL_API_URL=https://your-laravel-domain.com
LARAVEL_SANCTUM_ENABLED=true

# ==========================================
# LOGGING
# ==========================================
LOG_FILE=/app/logs/ml_unsupervised.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==========================================
# CACHE
# ==========================================
CACHE_ENABLED=true
CACHE_TTL=3600
