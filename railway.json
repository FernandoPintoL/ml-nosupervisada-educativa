{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "uvicorn api_unsupervised_server:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "ENVIRONMENT": "production",
    "DEBUG": "false",
    "API_WORKERS": "4",
    "LOG_LEVEL": "INFO",
    "SERVICE_TYPE": "unsupervised",
    "API_RELOAD": "false",
    "USE_GPU": "false"
  },
  "plugins": [
    {
      "source": "https://github.com/railwayapp/railway-plugin-postgresql.git",
      "config": {
        "name": "PostgreSQL",
        "description": "PostgreSQL database for ML Unsupervised models"
      }
    },
    {
      "source": "https://github.com/railwayapp/railway-plugin-redis.git",
      "config": {
        "name": "Redis",
        "description": "Redis cache for unsupervised models"
      }
    }
  ]
}
