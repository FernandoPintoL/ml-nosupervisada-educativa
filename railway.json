{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "uvicorn api_server:app --host 0.0.0.0 --port 8080",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "ENVIRONMENT": "production",
    "DEBUG": "false",
    "LOG_LEVEL": "INFO"
  },
  "plugins": [
    {
      "source": "https://github.com/railwayapp/railway-plugin-postgresql.git",
      "config": {
        "name": "PostgreSQL",
        "description": "PostgreSQL database for ML Unsupervised models"
      }
    }
  ]
}
